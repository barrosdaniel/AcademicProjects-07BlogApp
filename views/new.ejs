<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog Post</div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" id="title" placeholder="Enter blog post title" required>
        </div>
        <div class="field">
        <label for="image">Image</label>
        <input type="text" name="blog[image]" id="image" placeholder="Enter image URL" required>
        </div>
        <div class="field">
            <label for="body">Blog Post</label>
            <textarea name="blog[body]" id="body" placeholder="Enter text of blog post here..." required></textarea>
        </div>
        <div class="field">
            <button type="submit" class="ui secondary medium left floated grey button">Save</button>
        </div>
    </form>
</div>

<% include partials/footer %>