<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached">
            <div class="item">
                <img src="<%= blog.image %>" alt="<%= blog.title %> post image" class="ui fluid rounded image">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- blog.body %></p>
                </div>
                <a id="edit_button" href="/blogs/<%= blog._id %>/edit" class="ui secondary medium left floated grey button">Edit</a>
                <form #id="delete_button" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui secondary medium left floated grey button">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>