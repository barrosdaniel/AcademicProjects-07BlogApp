<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%= blog.title %>" post</div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="blog[title]" id="title" value="<%= blog.title %>" required>
        </div>
        <div class="field">
        <label for="image">Image</label>
        <input type="text" name="blog[image]" id="image" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label for="body">Blog Post</label>
            <textarea name="blog[body]" id="body" required><%- blog.body %></textarea>
        </div>
        <div class="field">
            <button type="submit" class="ui secondary medium left floated grey button">Save</button>
        </div>
    </form>
</div>

<% include partials/footer %>